---
import Layout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";


export async function getStaticPaths() {
  const studies = await getCollection("case-studies");
  return studies.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const title = entry.data.title ?? "Case Study";
const summary = entry.data.summary ?? "";
const tags = entry.data.tags ?? [];
const base = import.meta.env.BASE_URL;
---

<Layout title={title} description={summary}>
  <section class="mx-auto max-w-4xl px-4 py-10">
    <a href={`${base}#case-studies`} class="text-sm underline opacity-80 hover:opacity-100">
      ‚Üê Back to Case Studies
    </a>

    <header class="mt-6">
      <h1 class="text-3xl font-semibold tracking-tight">{title}</h1>

      {summary ? <p class="mt-3 text-base opacity-80">{summary}</p> : null}

      {tags.length > 0 ? (
        <div class="mt-4 flex flex-wrap gap-2">
          {tags.map((t) => (
            <span class="rounded-full border px-3 py-1 text-xs opacity-90">{t}</span>
          ))}
        </div>
      ) : null}
    </header>

    <article class="prose prose-neutral mt-10 max-w-none">
      <Content />
    </article>
  </section>
</Layout>
